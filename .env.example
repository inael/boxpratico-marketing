# ============================================
# AUTHENTICATION (Required)
# ============================================

# NextAuth.js Secret - Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here
NEXTAUTH_SECRET=your_auth_secret_here

# Auth URL (set automatically in Vercel, needed for local dev)
AUTH_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000

# Initial admin credentials (optional - defaults: admin / admin123)
# These are only used if no credentials are saved in the database yet
# After first login, you can change them in the Settings page
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ============================================
# GOOGLE OAUTH (Optional - for Google login)
# ============================================

# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/apis/credentials
# 2. Create a new OAuth 2.0 Client ID
# 3. Add BOTH authorized redirect URIs in Google Console:
#    - Development: http://localhost:3000/api/auth/callback/google
#    - Production:  https://marketing.boxpratico.com.br/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# VERCEL DEPLOYMENT (Required for production)
# ============================================

# Upstash Redis - Database storage
# Get these from Vercel Dashboard > Storage > KV (Upstash)
upstash_boxpratico_marketing_KV_REST_API_URL=https://your-redis-instance.upstash.io
upstash_boxpratico_marketing_KV_REST_API_TOKEN=your_upstash_token_here

# Vercel Blob - File storage for media uploads
# Get this from Vercel Dashboard > Storage > Blob
BLOB_BOXPRATICO_MARKETING_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxx

# ============================================
# OPTIONAL
# ============================================

# OpenWeatherMap API Key (for weather display)
# Get this from https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Evolution API - WhatsApp integration for notifications
# Get the API key from your Evolution API server
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your_evolution_api_key_here
EVOLUTION_INSTANCE=boxpratico
EVOLUTION_MANAGER_URL=http://localhost:8080/manager

# ============================================
# MERCADOPAGO (for payments)
# ============================================

# Get your credentials from MercadoPago:
# 1. Go to https://www.mercadopago.com.br/developers/panel/app
# 2. Create a new application or use an existing one
# 3. Go to "Credenciais de produção" and "Credenciais de teste"
# 4. Copy the Access Token

# Production Access Token (use after account validation)
MERCADOPAGO_ACCESS_TOKEN=APP_USR-xxxxxxxxxxxx-xxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-xxxxxxxxx

# Test/Sandbox Access Token (for development)
MERCADOPAGO_ACCESS_TOKEN_TEST=TEST-xxxxxxxxxxxx-xxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-xxxxxxxxx

# Public Key (for frontend integrations like Checkout Bricks)
MERCADOPAGO_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================
# RTMP/HLS STREAMING (for camera integration)
# ============================================

# Stream server domain (HTTPS for HLS playback)
STREAM_DOMAIN=stream.boxpratico.com.br

# RTMP server IP and port (for camera configuration)
RTMP_SERVER=72.61.135.214:1935
